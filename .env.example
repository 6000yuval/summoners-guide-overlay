# Environment Configuration
NODE_ENV=development

# Riot Games API (optional - will use mocks in development if not provided)
RIOT_API_KEY=your_riot_api_key_here

# Development Settings
DEV_PORT=3000
DEV_HOST=localhost

# Mock Data Settings (for development)
ENABLE_MOCKS=true
MOCK_GAME_STATE=ChampSelect
MOCK_CHAMPION=Yasuo
MOCK_ROLE=mid

# Electron Settings
ELECTRON_IS_DEV=true

# API Endpoints (will use mocks if not reachable)
LCU_PORT=2999
LCU_PASSWORD=mock_password