
{
  "appId": "com.leaguecoachpro.app",
  "productName": "League Coach Pro",
  "directories": {
    "output": "dist-electron",
    "buildResources": "public"
  },
  "files": [
    "dist/**/*",
    "electron/**/*"
  ],
  "extraResources": [
    {
      "from": "public",
      "to": "public",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": "portable",
    "icon": "public/favicon.ico"
  },
  "mac": {
    "target": "dir",
    "icon": "public/favicon.ico"
  },
  "linux": {
    "target": "dir",
    "icon": "public/favicon.ico"
  }
}
