
{
  "appId": "com.leaguecoachpro.app",
  "productName": "League Coach Pro",
  "directories": {
    "output": "dist-electron",
    "buildResources": "public"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "!node_modules/**/*",
    "node_modules/electron/**/*"
  ],
  "extraResources": [
    {
      "from": "public",
      "to": "public",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": {
      "target": "nsis",
      "arch": ["x64"]
    },
    "icon": "public/favicon.ico"
  },
  "mac": {
    "target": {
      "target": "dmg",
      "arch": ["x64", "arm64"]
    },
    "icon": "public/favicon.ico",
    "category": "public.app-category.games"
  },
  "linux": {
    "target": {
      "target": "AppImage",
      "arch": ["x64"]
    },
    "icon": "public/favicon.ico",
    "category": "Game"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
